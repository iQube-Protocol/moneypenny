---
import Logo from '../components/Logo.astro';

const navItems = [
    { linkText: 'Home', href: '/' },
    { linkText: 'HFT Console', href: '/moneypenny/console' },
    { linkText: 'Banking Wizard', href: '/banking' }
];
---

<nav class="flex flex-wrap items-center gap-4 pt-6 pb-4 px-6 max-w-7xl mx-auto">
    <a href="/" class="text-xl font-bold text-emerald-600">
        Aigent MoneyPenny
    </a>
    {
        !!navItems?.length && (
            <ul class="flex flex-wrap gap-x-4 gap-y-1">
                {navItems.map((item) => (
                    <li>
                        <a href={item.href} class="inline-block px-1.5 py-1 sm:px-3 sm:py-2 text-gray-600 hover:text-gray-900 transition-colors">
                            {item.linkText}
                        </a>
                    </li>
                ))}
            </ul>
        )
    }
</nav>
